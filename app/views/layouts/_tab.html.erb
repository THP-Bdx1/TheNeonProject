<script>
var myAudio = document.getElementById("myAudio");
var isPlaying = false;

function togglePlay() {
    document.body.style.background ="#000000 url('/images/tron.gif') no-repeat center center fixed";
  if (isPlaying) {
    myAudio.pause()
  } else {
    myAudio.play();
  }
};
myAudio.onplaying = function() {
  isPlaying = true;
};
myAudio.onpause = function() {
  isPlaying = false;
};
</script>